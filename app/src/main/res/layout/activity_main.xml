<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/leonespatio">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATG"
                android:id="@+id/textView4"
                android:textSize="50dp"
                android:textColor="#3bda26"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Active Tourism Granada"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textColor="#67c654"
                android:textSize="25dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Iniciar SesiÃ³n"
                android:id="@+id/botonSesion"
                android:background="@color/material_deep_teal_200"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Registrarse"
                android:id="@+id/botonRegistro"
                android:background="@color/material_deep_teal_200"
                android:layout_below="@+id/botonSesion"
                android:layout_alignLeft="@+id/botonSesion"
                android:layout_alignStart="@+id/botonSesion"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting"
                android:src="@drawable/setting"
                android:adjustViewBounds="true"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/logo_ugr"
            android:layout_marginTop="20dp"></LinearLayout>
    </LinearLayout>

</RelativeLayout>
