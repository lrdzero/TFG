<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lrdzero.tfg.RecorridosParaUsuario"
    android:background="#FFFECF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recorridos para tÃ­"
        android:id="@+id/TextoRecorrido"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:id="@+id/imageView7"
        android:src="@drawable/guia2"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Selecciona el recorrido en el que quieres participar"
        android:id="@+id/TextoGuia"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="#ffffffff"
        android:editable="false" />

    <ListView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/listView2"
        android:layout_above="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:id="@+id/button2"
        android:background="#ffff0d0e"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignLeft="@+id/TextoGuia"
        android:layout_alignStart="@+id/TextoGuia" />


</RelativeLayout>
