<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Mapa">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mi_mapa"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </com.google.android.gms.maps.MapView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirmado"
        android:id="@+id/confirmar"
        android:layout_below="@+id/mi_mapa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deshacer"
        android:id="@+id/deshacer"
        android:layout_below="@+id/confirmar"
        android:layout_alignLeft="@+id/confirmar"
        android:layout_alignStart="@+id/confirmar"
        android:layout_alignRight="@+id/confirmar"
        android:layout_alignEnd="@+id/confirmar" />

</RelativeLayout>
