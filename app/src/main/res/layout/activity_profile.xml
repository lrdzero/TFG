<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lrdzero.tfg.ProfileActivity"
    android:background="#FFFECF">

    <TextView android:text="Nombre" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_above="@+id/fecha"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_marginBottom="30dp"
        android:textColor="#ff37000f"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView5"
        android:src="@drawable/busto"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Fecha Nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fecha"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre"
        android:layout_marginBottom="25dp"
        android:textColor="#ff37000f"/>

    <TextView
        android:text="Mis estadísticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estadisticas"
        android:layout_centerVertical="true"
        android:textColor="#ff37000f"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/estad"
        android:layout_below="@+id/estadisticas"
        android:layout_alignLeft="@+id/estadisticas"
        android:layout_alignStart="@+id/estadisticas"
        android:layout_marginTop="52dp"
        android:background="@drawable/estad" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Cerrar Sesión"
        android:id="@+id/button"
        android:textColor="#ffffffff"
        android:background="#ffff3927"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nombre"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
