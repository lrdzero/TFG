<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lrdzero.tfg.ProfileActivity"
    android:background="#FFFECF">

    <TextView android:text="Nombre" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre"
        android:textColor="#ff37000f"
        android:textSize="17sp"
        android:layout_alignTop="@+id/foto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/foto"
        android:src="@drawable/busto"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edad"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:textColor="#ff37000f"
        android:layout_below="@+id/nombre"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre" />

    <TextView
        android:text="Mis estadísticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estadisticas"
        android:textColor="#ff37000f"
        android:textSize="18sp"
        android:layout_below="@+id/foto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="112dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageestadisticas"
        android:src="@drawable/estadisticas"
        android:layout_below="@+id/estadisticas"
        android:layout_alignLeft="@+id/estadisticas"
        android:layout_alignStart="@+id/estadisticas"
        android:layout_marginTop="52dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Cerrar Sesión"
        android:id="@+id/button"
        android:textColor="#ffffffff"
        android:background="#ffff3927"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herramientas de autor"
        android:id="@+id/button2"
        android:layout_below="@+id/foto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/foto"
        android:layout_alignEnd="@+id/foto" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/edit"
        android:id="@+id/imageView9"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/edad"
        android:layout_toRightOf="@+id/nombre"
        android:layout_toEndOf="@+id/nombre" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/edit"
        android:id="@+id/imageView10"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/edad"
        android:layout_toRightOf="@+id/nombre"
        android:layout_toEndOf="@+id/nombre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discapacidades"
        android:id="@+id/discapacidades"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/edad" />

    <TextView
        android:text="Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwd"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textColor="#ff37000f"
        android:layout_alignBottom="@+id/foto"
        android:layout_alignLeft="@+id/edad"
        android:layout_alignStart="@+id/edad"
        android:password="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/edit"
        android:id="@+id/imageView11"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/passwd"
        android:layout_toRightOf="@id/passwd"
        />

</RelativeLayout>
