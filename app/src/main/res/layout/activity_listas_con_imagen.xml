<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lrdzero.tfg.ListasConImagen">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@color/ripple_material_dark">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView8"
            android:src="@drawable/f0907"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp">

            TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nombre:"
                android:id="@+id/textView24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombre Recorrido X"
                android:id="@+id/NombreRecorrido"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Numero rutas: x"
                android:id="@+id/nRutas"
                android:layout_alignBottom="@+id/imageView8"
                android:layout_alignLeft="@+id/NombreRecorrido"
                android:layout_marginRight="10dp"
                android:layout_alignStart="@+id/NombreRecorrido" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Breve resumen"
                android:id="@+id/textView7"
                android:layout_alignBottom="@+id/imageView8"
                android:layout_alignLeft="@+id/nRutas"
                android:layout_marginRight="10dp"
                android:layout_alignStart="@+id/nRutas" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
